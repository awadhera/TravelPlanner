<h3 class="page-header text-center">Edit Trip</h3>
<form class="form-signin">
  <div class="form-group">
    <label>Destination:</label>
    {{input value=model.destination class='form-control'}}
    <div class="error">
      {{v-get model 'destination' 'message'}}
    </div>
  </div>
  <div class="form-group">
    <label>Start Date:</label>
      {{pikaday-input class='form-control' value=model.startdate format="YYYY-MM-DD" readonly="readonly" useUTC=true onSelection=(action 'endDateActivate') }}
      <div class="error">
        {{v-get model 'startdate' 'message'}}
      </div>
  </div>
  <div class="form-group">
    <label>End date:</label>
      {{pikaday-input class='form-control' disabled=endDateActive value=model.enddate format="YYYY-MM-DD" readonly="readonly" minDate=model.startdate useUTC=true onSelection=(action (mut model.enddate))}}
      <div class="error">
        {{v-get model 'enddate' 'message'}}
      </div>
  </div>
  <div class="form-group">
    <label>Comment:</label>
    {{input class='form-control' type="comment" value=model.comment}}
  </div>
  <div>
    <button type="submit" class="btn btn-lg btn-primary btn-block" {{action 'saveEditedTrip' model}}>Save changes</button>
    <button {{action 'cancelEditedTrip'}}class="btn btn-lg btn-primary btn-block">Cancel edit</button>
  </div>
  <div class='form-group'>
    {{#if errorMessage}}
      <div class="error">
        {{errorMessage}}
      </div>
    {{/if}}
  </div>
</form>
